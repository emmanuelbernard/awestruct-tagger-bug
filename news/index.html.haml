---
layout: base
---
.row
  .span12
    - for post in site.posts
      .post
        %h1 
          %a{:href=>post.url}= post.title
        %h2 
          = post.date.strftime( '%d %B %Y' )
        %h2
          - for tag in post.tags
            %a{:href =>tag.primary_page.url }
              = tag
              at url
              = tag.primary_page.url


        .content
          = post.content
